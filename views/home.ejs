<%- include('partials/header'); -%>
<h1>HOME !</h1>
<p> <%= text %></p>

<% function truncateText(text){%>
<%  if(text.length > 100){%>
<%    const truncatedText = text.slice(0,100) + '...'; %>
<%    return truncatedText; %>
<%  }%>

<%  return text; %>
<%} %>

<% blogPost.forEach(function(newBlog){ %>
  <% const postTitle = _.lowerCase(newBlog.newBlogTitle); %>
  <a href="/posts/<%= postTitle%>"><h1> <%= newBlog.newBlogTitle %></h1></a>
    <p> <%= truncateText(newBlog.newBlogPost) %> </p>
<% }) %>

<%- include('partials/footer'); -%>
